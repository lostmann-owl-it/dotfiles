"$schema" = 'https://starship.rs/config-schema.json'

format = """
[░▒▓](color_water_park)\
$os\
$username\
[](bg:color_baltic fg:color_water_park)\
$directory\
[](fg:color_baltic bg:color_corfu_waters)\
$git_branch\
$git_status\
[](fg:color_corfu_waters bg:color_pristine_seas)\
$c\
$rust\
$golang\
$nodejs\
$php\
$java\
$kotlin\
$haskell\
$python\
[](fg:color_pristine_seas bg:color_starry_night)\
$docker_context\
$kubernetes\
[](fg:color_starry_night bg:color_maroccan_blue)\
$time\
[ ](fg:color_maroccan_blue)\
$line_break$character"""

palette = 'gruvbox_dark'

[palettes.gruvbox_dark]
color_fg0 = '#fbf1c7'
color_bg1 = '#3c3836'
color_bg3 = '#665c54'
# color_blue = '#458588'
# color_aqua = '#689d6a'
# color_green = '#98971a'
# color_orange = '#d65d0e'
# color_purple = '#b16286'
# color_red = '#cc241d'
# color_yellow = '#d79921'
color_water_park = '#68b29b'
color_baltic = '#509ca3'
color_corfu_waters = '#3b86ab'
color_pristine_seas = '#35729d'
color_starry_night = '#2f5e8f'
color_maroccan_blue = '#264c75'


[os]
disabled = false
style = "bg:color_water_park fg:color_fg0"

[os.symbols]
Windows = ""
Ubuntu = ""
SUSE = " "
Raspbian = ""
Mint = ""
Macos = ""
Manjaro = ""
Linux = ""
Gentoo = ""
Fedora = ""
Alpine = ""
Amazon = ""
Android = ""
Arch = ""
Artix = ""
CentOS = ""
Debian = ""
Redhat = ""
RedHatEnterprise = ""

[username]
show_always = true
style_user = "bg:color_water_park fg:color_fg0"
style_root = "bg:color_water_park fg:color_fg0"
format = '[ $user ]($style)'

[directory]
style = "fg:color_fg0 bg:color_baltic"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = " "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
"Developer" = " "

[git_branch]
symbol = ""
style = "bg:color_corfu_waters"
format = '[[ $symbol $branch ](fg:color_fg0 bg:color_corfu_waters)]($style)'

[git_status]
style = "bg:color_corfu_waters"
format = '[[($all_status$ahead_behind )](fg:color_fg0 bg:color_corfu_waters)]($style)'

[nodejs]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[c]
symbol = " "
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[rust]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[golang]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[php]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[java]
symbol = " "
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[kotlin]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[haskell]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[python]
symbol = ""
style = "bg:color_pristine_seas"
format = '[[ $symbol( $virtualenv $version) ](fg:color_fg0 bg:color_pristine_seas)]($style)'

[docker_context]
symbol = ""
style = "bg:color_starry_night"
format = '[[ $symbol( $context) ](fg:color_fg0 bg:color_starry_night)]($style)'

[kubernetes]
disabled = false
# style = "bg:color_starry_night"
# format = '[[ $symbol($context \($namespace\)) ](bg:color_starry_night)]($style)'
format = '[ $symbol($context \($namespace\)) ]($style)'
# detect_files = ['k8s']

[[kubernetes.contexts]]
context_pattern = ".*-prod"
style = "fg:bold red bg:color_starry_night"

[[kubernetes.contexts]]
context_pattern = ".*-test"
style = "fg:color_fg0 bg:color_starry_night"

[time]
disabled = false
time_format = "%R"
style = "bg:color_maroccan_blue"
format = '[[  $time ](fg:color_fg0 bg:color_maroccan_blue)]($style)'

[line_break]
disabled = false

[character]
disabled = false
# success_symbol = '[](bold fg:color_green)'
# error_symbol = '[](bold fg:color_red)'
# vimcmd_symbol = '[](bold fg:color_green)'
# vimcmd_replace_one_symbol = '[](bold fg:color_purple)'
# vimcmd_replace_symbol = '[](bold fg:color_purple)'
# vimcmd_visual_symbol = '[](bold fg:color_baltic)'
